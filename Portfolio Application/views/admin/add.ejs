<%- include('../partials/header') -%>
<div class="container">
  <h1>Added Course</h1>
  <form
    method="POST"
    action="/admin/add"
    class="mb-5"
  >
    <div class="form-group">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Enter Title"
      />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input
        type="text"
        class="form-control"
        name="description"
        placeholder="Enter Description"
      />
    </div>
    <div class="form-group">
      <label for="service">Service</label>
      <input
        type="service"
        class="form-control"
        name="service"
        placeholder="Enter Service"
      />
    </div>
    <div class="form-group">
      <label for="client">Client</label>
      <input
        type="text"
        class="form-control"
        name="client"
        placeholder="Enter Client"
      />
    </div>
    <div class="form-group">
      <label for="url">Project url</label>
      <input
        type="text"
        class="form-control"
        name="projectUrl"
        placeholder="Enter ProjectUrl"
      />
    </div>
    <div class="form-group">
      <label for="mainimage">mainimage</label>
      <input
        type="text"
        class="form-control"
        name="mainimage"
        placeholder="Enter File"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  

<table class="table mb-5">
  <tr>
    <th scope="col">Client</th>
    <th scope="col">Actions</th>
    <th scope="col">Date</th>
    <th scope="col">Delete</th>
    <th scope="col">Edit</th>
</tr>
    <% courses.forEach((course)=>{ %>
    <tbody>
      <tr>
        <td>
          <h5><%= course.client %></h5>
        </td>
        <td>
          <a href="/admin/show/<%= course.id %>" class="btn btn-dark"
            >Details</a
          >
        </td>
        <td>Posted Date: <%= moment(course.date).format("MM-DD-YYYY") %></td>
        <td>
        <form action="/admin/delete/<%=course.id%>?_method=DELETE" method="POST">
          <div class="form-group">
            <input type="hidden" name="_method" value="DELETE">
            <input class="btn btn-danger" type="submit" value="Delete">
          </div>
        </form>
      </td>
      <td>
          <a class="btn btn-success" href="/admin/edit/<%= course.id %>">Edit</a>
      </td>
      </tr>
    </tbody>
    <% }) %>
  </table>
</div>
</div>


<%- include('../partials/footer') -%>
